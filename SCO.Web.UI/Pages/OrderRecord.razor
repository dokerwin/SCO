@inject HttpClient httpClient
@using SCO.Contracts.DTOs

@if (!isEditMode)
{
    <tr>
        <td>@Item.ShortName</td>
        <td>@Item.Barcode</td>
        <td>@Item.UnitPrice</td>
        <td><a @onclick="() =>{ isEditMode = true; }" href="javascript:void(0)"><i class="oi oi-pencil"></i></a></td>
        <td><a @onclick="async () => await DeleteItem.InvokeAsync(Item.Id)" href="javascript:void(0)"><i class="oi oi-trash"></i></a></td>
    </tr>
}
else
{
    <tr>
        <td><input class="form-control" @bind="Item.ShortName" placeholder="Name" /></td>
        <td><input class="form-control" @bind="Item.Barcode" placeholder="Mobile" /></td>
        <td><input class="form-control" @bind="Item.UnitPrice" placeholder="Email" /></td>
        <td></td>
    </tr>
}

@code {
    private bool isEditMode = false;

    [Parameter]
    public BasketItemDetailDto Item { get; set; }

    [Parameter]
    public EventCallback<Guid> DeleteItem { get; set; }
}
